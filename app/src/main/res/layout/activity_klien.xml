<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/klien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    tools:context=".KlienActivity">

    <!-- Bar Atas -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Klien"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Stats Cards Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Active Jobs Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="#2563EB">

                    <TextView
                        android:id="@+id/tv_active_jobs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Aktif"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Applications Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="#F59E0B">

                    <TextView
                        android:id="@+id/tv_applications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lamaran"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Completed Projects Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/project_completed"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="#10B981">

                    <TextView
                        android:id="@+id/tv_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Tab Navigation dengan ViewPager (Modern Approach) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Custom Tab Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp">

            <!-- Each button is wrapped in a FrameLayout to increase touch area -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:padding="4dp">

                <Button
                    android:id="@+id/btnTabMyJobs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:text="Job Saya"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#2563EB"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp">

                <Button
                    android:id="@+id/btnTabApplications"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:text="Lamaran"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#E2E8F0"
                    android:textColor="#64748B" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:padding="4dp">

                <Button
                    android:id="@+id/btnTabProfile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:text="Profile"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#E2E8F0"
                    android:textColor="#64748B" />
            </FrameLayout>
        </LinearLayout>

        <!-- Content Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8FAFC"
            android:padding="12dp">

            <!-- TAB JOB SAYA -->
            <LinearLayout
                android:id="@+id/tabMyJobs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Search Bar tetap terlihat -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.7" />

                        <EditText
                            android:id="@+id/et_search_my_jobs"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Cari job yang sudah saya posting..."
                            android:textColorHint="#94A3B8"
                            android:textColor="#1E293B"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:textSize="14sp"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container untuk daftar job dengan card wrapper -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#F1F5F9"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Daftar Job Saya"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textSize="12sp"
                                android:textColor="#64748B" />
                        </LinearLayout>

                        <!-- Garis pemisah header -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E2E8F0" />

                        <!-- ScrollView untuk ListView -->
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <!-- ListView dengan custom divider yang jelas -->
                                <ListView
                                    android:id="@+id/listMyJobs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="400dp"
                                    android:divider="#E2E8F0"
                                    android:dividerHeight="2dp"
                                    android:scrollbars="none"
                                    android:nestedScrollingEnabled="true"
                                    android:paddingVertical="8dp"
                                    android:clipToPadding="false"
                                    android:footerDividersEnabled="false"
                                    android:headerDividersEnabled="false" />

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- TAB LAMARAN -->
            <ScrollView
                android:id="@+id/tabApplications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header Card dengan Icon -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/stat_notify_chat"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lamaran Masuk"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E293B" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kelola lamaran dari freelancer"
                                    android:textSize="14sp"
                                    android:textColor="#64748B"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Container untuk ListView Lamaran -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Header untuk daftar lamaran -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#FEF3C7"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Daftar Pelamar"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E293B" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Aksi"
                                    android:textSize="12sp"
                                    android:textColor="#64748B" />
                            </LinearLayout>

                            <!-- Garis pemisah header -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#F59E0B" />

                            <!-- ListView untuk Applications dengan divider yang jelas -->
                            <ListView
                                android:id="@+id/listApplications"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="300dp"
                                android:divider="#E2E8F0"
                                android:dividerHeight="2dp"
                                android:scrollbars="none"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="8dp"
                                android:clipToPadding="false"
                                android:footerDividersEnabled="false"
                                android:headerDividersEnabled="false" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <!-- TAB PROFILE -->
            <ScrollView
                android:id="@+id/tabProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Profile Card Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <ImageView
                                android:id="@+id/profileImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/fotoprofile"
                                android:background="@drawable/bg_circle"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                android:elevation="2dp" />

                            <!-- Tombol Edit Profile -->
                            <Button
                                android:id="@+id/btnEditProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:text="Edit Profile"
                                android:textAllCaps="false"
                                android:layout_marginTop="16dp"
                                android:backgroundTint="#2563EB"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:paddingHorizontal="24dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/tvClientName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Klien"
                                android:textColor="#1E293B"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp" />

                            <TextView
                                android:id="@+id/tvClientEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email@example.com"
                                android:textColor="#64748B"
                                android:textSize="16sp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/tvClientCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Perusahaan"
                                android:textColor="#64748B"
                                android:textSize="16sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tombol Logout -->
                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:backgroundTint="#EF4444"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:paddingHorizontal="32dp"
                        android:layout_gravity="center" />

                </LinearLayout>
            </ScrollView>

        </FrameLayout>
    </LinearLayout>

    <!-- Floating Action Button untuk Post Job -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPostJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:backgroundTint="#2563EB"
        android:src="@android:drawable/ic_input_add"
        app:tint="#FFFFFF"
        android:elevation="6dp"
        android:contentDescription="Post Pekerjaan Baru" />

</LinearLayout>